{
  "name": "airbnb-app",
  "author": "Davy Hausser",
  "version": "0.1.0",
  "license": "ISC",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "codegen": "apollo client:codegen __generated__ --outputFlat --target typescript"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.1.2",
    "@hapi/iron": "^6.0.0",
    "@nexus/schema": "^0.14.0",
    "@prisma/client": "^2.4.1",
    "apollo-server-micro": "^2.16.1",
    "graphql": "^14.7.0",
    "next": "9.5.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "subscriptions-transport-ws": "^0.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@prisma-labs/prettier-config": "^0.1.0",
    "@prisma/cli": "^2.4.1",
    "@testing-library/react": "^10.0.1",
    "@types/cookie": "^0.4.0",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.44",
    "@types/testing-library__react": "^10.0.0",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "apollo": "^2.30.2",
    "babel-jest": "^26.2.2",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-react": "^7.20.5",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.2.2",
    "jest-watch-typeahead": "^0.6.0",
    "lint-staged": "^10.0.10",
    "prettier": "^2.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.8.3"
  },
  "resolutions": {
    "graphql": "14.7.0",
    "@prisma/cli": "2.4.1",
    "@prisma/client": "2.4.1"
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](node_modules|.next)[/\\\\]"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(ts|tsx)$"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "babel-jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "identity-obj-proxy",
      "\\.(gif|ttf|eot|svg|png)$": "<rootDir>/test/__mocks__/fileMock.js"
    }
  },
  "prettier": "@prisma-labs/prettier-config"
}