{
  "name": "airbnb-app",
  "author": "dhausser",
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "nexus build && next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test:nexus": "nexus build",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "codegen": "apollo client:codegen __generated__ --outputFlat --target typescript",
    "codegen:watch": "apollo client:codegen __generated__ --outputFlat --target typescript --watch",
    "nexus:reflection": "nexus dev --reflection --entrypoint pages/api/graphql.ts",
    "nexus:check": "nexus build --entrypoint pages/api/graphql.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.0.2",
    "@babel/core": "^7.0.0",
    "@hapi/iron": "^6.0.0",
    "graphql": "^14.7.0",
    "next": "latest",
    "nexus": "^0.25.0",
    "nexus-plugin-prisma": "^0.16.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "subscriptions-transport-ws": "^0.9.0"
  },
  "devDependencies": {
    "@prisma-labs/prettier-config": "^0.1.0",
    "@testing-library/react": "^10.0.1",
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.26",
    "@types/react": "^16.9.27",
    "@types/testing-library__react": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "apollo": "^2.30.1",
    "babel-jest": "^26.1.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-react": "^7.20.4",
    "husky": "^4.2.3",
    "jest": "^26.1.0",
    "jest-watch-typeahead": "^0.6.0",
    "lint-staged": "^10.0.10",
    "prettier": "^2.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "@babel/core": "^7.0.0",
    "subscriptions-transport-ws": "^0.9.0"
  },
  "resolutions": {
    "graphql": "14.7.0"
  },
  "prettier": "@prisma-labs/prettier-config"
}
